APP_NAME = Gogs
RUN_USER = git
RUN_MODE = prod

[database]
DB_TYPE  = mysql
HOST     = {{ gogs_mysql_host }}
NAME     = {{ gogs_mysql_gogs_db  }}
USER     = {{ gogs_mysql_gogs_user  }}
PASSWD   = {{ gogs_mysql_gogs_password  }}
SSL_MODE = disable
PATH     = data/gogs.db

[repository]
ROOT = {{ gogs_gogs_repository }}

[server]
DOMAIN           = {{ ansible_hostname }}
HTTP_PORT        = 3000
ROOT_URL         = http://{{ ansible_hostname }}:3000/
DISABLE_SSH      = false
SSH_PORT         = 22
START_SSH_SERVER = false
OFFLINE_MODE     = false

[mailer]
ENABLED = false

[service]
REGISTER_EMAIL_CONFIRM = false
ENABLE_NOTIFY_MAIL     = false
DISABLE_REGISTRATION   = false
ENABLE_CAPTCHA         = false
REQUIRE_SIGNIN_VIEW    = true

[picture]
DISABLE_GRAVATAR        = false
ENABLE_FEDERATED_AVATAR = false

[session]
PROVIDER = file

[log]
MODE      = file
LEVEL     = Info
ROOT_PATH = {{ gogs_gogs_install }}/gogs/log

